{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {   
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  "target": "es2020",
  "module": "esnext",
  "lib": ["es2020", "dom"],
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
